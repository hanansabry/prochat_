<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/White</item>
        <item name="android:windowActionBar">false</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
<!--        <item name="buttonStyle">@style/ButtonStyle</item>-->

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="LightAppTheme" parent="AppTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DarkAppTheme" parent="AppTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ubuntu_mono</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="ButtonIconStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ubuntu_mono</item>
        <item name="fontWeight">700</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ubuntu_mono</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="DimmedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/dimmed_button_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ubuntu_mono</item>
        <item name="fontWeight">700</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="TabButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/white_cornered_all</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ubuntu_mono</item>
        <item name="fontWeight">700</item>
        <item name="android:textColor">@color/SecondaryGray</item>
    </style>

    <style name="ActiveButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/active_button_bg</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ubuntu_mono</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="DeleteButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/RedButtonThemeOverlay</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ubuntu_mono</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="RedButtonThemeOverlay">
        <item name="colorPrimary">@color/DarkRed</item>
    </style>

    <style name="GrayButtonThemeOverlay">
        <item name="colorPrimary">@color/LighterGray</item>
    </style>

    <style name="RobotoEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="SearchAppBottomSheetDialogTheme">
        <item name="bottomSheetStyle">@style/AppModalStyleWithPeekHeight</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/white_cornered_bg_radious_50</item>
<!--        <item name="behavior_peekHeight">680dp</item>-->
    </style>

    <style name="AppModalStyleWithPeekHeight" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/white_cornered_bg_radious_50</item>
        <item name="behavior_peekHeight">680dp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SearchFloatingStyle" parent="Widget.Design.FloatingActionButton">
        <!---rest of your style-->
        <item name="android:foreground">@drawable/search_fab_button_bg</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerRadius24Shape" parent="">
        <item name="cornerSize">30%</item>
    </style>

</resources>