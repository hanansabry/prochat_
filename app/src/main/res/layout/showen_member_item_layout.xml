<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:paddingTop="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:id="@+id/main_layout">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@id/member_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/user_2_tmp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/member_name"
        app:layout_constraintBottom_toBottomOf="@id/member_code"/>

    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Ahmed Morsi"
        android:textColor="@color/DarkGray"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/member_image"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/member_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#at9802"
        android:textColor="@color/SecondaryGray"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/seperator"
        app:layout_constraintStart_toStartOf="@id/member_name"
        app:layout_constraintTop_toBottomOf="@id/member_name" />

    <View
        android:id="@+id/seperator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="@color/LighterGray"
        app:layout_constraintStart_toStartOf="@id/member_name"
        app:layout_constraintTop_toBottomOf="@id/member_code" />

    <ImageButton
        android:id="@+id/selected_checkbox_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/radio_button_checked_green"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/member_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/member_name" />

</androidx.constraintlayout.widget.ConstraintLayout>