<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_main_info"
            android:textColor="@color/DarkGray"
            android:textFontWeight="700"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/upload_cover_image_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/add_photo_alternate_black_24dp_1"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorSecondary"
                android:text="@string/upload_group_cover_image"
                android:textColor="@color/colorSecondary"
                android:textFontWeight="700"
                android:textSize="18dp"
                app:fontFamily="@font/ubuntu_mono" />

        </FrameLayout>

        <EditText
            android:id="@+id/group_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height_size"
            android:layout_marginTop="40dp"
            android:textSize="16sp"
            android:textFontWeight="400"
            android:background="@drawable/textfield_default_placeholder_bg"
            android:hint="@string/group_name"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Select group type"
            android:textColor="@color/DarkGray"
            android:textFontWeight="400"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/select_group_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">

                <ImageButton
                    android:id="@+id/public_group_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/public_group" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="14dp"
                    android:text="@string/public_"
                    android:textColor="@color/DarkGray"
                    android:textFontWeight="400"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:text="@string/or"
                android:textColor="@color/LighterGray"
                android:textFontWeight="400"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/private_group_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/private_group"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/private_"
                    android:textColor="@color/DarkGray"
                    android:textFontWeight="400"
                    android:layout_gravity="bottom|center"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/add_members_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="92dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:text="Add Group Members"
                android:textColor="@color/DarkGray"
                android:textFontWeight="400"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/add_members_button"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/add_black_24dp_1"
                android:tint="@color/SecondaryGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/add_members_button"
                android:text="0"
                android:textColor="@color/LighterGray"
                android:textFontWeight="400"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="28dp"
                android:background="@color/LighterGray"
                android:layout_below="@id/add_members_button" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>