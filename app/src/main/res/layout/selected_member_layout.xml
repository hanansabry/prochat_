<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selected_member_bg"
    android:orientation="horizontal"
    android:layout_marginEnd="8dp"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <ImageButton
        android:id="@+id/remove_selected_member"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_toEndOf="@id/member_name"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/close_black_24dp_1"
        android:tint="@color/DarkGray" />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/member_thumb_image_view"
        android:layout_marginEnd="12dp"
        android:text="Ahmed Morsi"
        android:textColor="@color/DarkGray"
        android:textFontWeight="400"
        android:textSize="14sp"
        android:singleLine="true"
        android:ellipsize="end"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/member_thumb_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"

        android:src="@drawable/user_image_temp" />
</RelativeLayout>