<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/group_cover_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/green_shadow_shape_bg"
            android:scaleType="fitXY"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/group_cover_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/group_cover_temp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.BottomLeftRightCorneredShape" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="24dp"
            android:src="@drawable/group_cover_bg"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.BottomLeftRightCorneredShape" />
    </FrameLayout>

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Hospital Team"
        android:textColor="@color/colorPrimary"
        android:textFontWeight="700"
        android:textSize="32sp"
        app:fontFamily="@font/ubuntu_mono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_cover_layout" />

    <TextView
        android:id="@+id/group_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Private"
        android:textColor="@color/DarkGray"
        android:textFontWeight="700"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_name" />

</androidx.constraintlayout.widget.ConstraintLayout>