<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/found_user_layout_add_and_select"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:text="This user is not listed in your members list"
            android:layout_gravity="center"
            android:textColor="@color/SecondaryGray"
            android:textFontWeight="400"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:src="@drawable/user_profile_vector_bg"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_icon"
                android:layout_gravity="center"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:layout_gravity="center"
                android:layout_marginTop="-8dp"
                app:strokeColor="@color/White"
                android:src="@drawable/user_image_temp"/>

        </FrameLayout>

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ahmed Morsi"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textFontWeight="700"
            android:layout_marginTop="-24dp"
            app:fontFamily="@font/ubuntu_mono" />

        <TextView
            android:id="@+id/user_job_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Designer"
            android:textColor="@color/SecondaryGray"
            android:textFontWeight="400"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/user_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="#am1234"
            android:textColor="@color/LighterGray"
            android:textFontWeight="400"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/add_select_button"
            style="@style/DimmedButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/active_button_bg"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginBottom="64dp"
            android:text="@string/add_select"
            android:textColor="@color/White"
            android:textFontWeight="700"
            android:textSize="18sp"
            android:focusableInTouchMode="true"
            app:fontFamily="@font/ubuntu_mono" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>