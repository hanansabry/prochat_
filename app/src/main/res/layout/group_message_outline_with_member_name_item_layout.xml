<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@id/member_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/user_2_tmp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/member_name"
        app:layout_constraintBottom_toBottomOf="@id/group_message_sub_title"/>

    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Ahmed Morsi"
        android:textColor="@color/DarkGray"
        android:textFontWeight="700"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/member_image"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/group_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morsi's Work Group"
        android:textColor="@color/LighterGray"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/member_name"
        app:layout_constraintTop_toBottomOf="@id/member_name" />

    <TextView
        android:id="@+id/group_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:24 pm"
        android:textColor="@color/LighterGray"
        android:textFontWeight="400"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/member_name" />

    <TextView
        android:id="@+id/group_message_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Hi Ahmed, I am texting you because we need to do somd lk"
        android:textColor="@color/SecondaryGray"
        android:textFontWeight="400"
        android:textSize="14sp"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/member_name"
        app:layout_constraintTop_toBottomOf="@id/group_message_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/LighterGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_message_sub_title" />

</androidx.constraintlayout.widget.ConstraintLayout>