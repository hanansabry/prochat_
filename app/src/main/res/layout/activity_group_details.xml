<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.screens.group.GroupDetailsActivity">

        <FrameLayout
            android:id="@+id/group_cover_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/green_shadow_shape_bg"
                android:scaleType="fitXY"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/group_cover_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/group_cover_temp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.BottomLeftRightCorneredShape" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="24dp"
                android:src="@drawable/group_cover_bg"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.BottomLeftRightCorneredShape" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="@dimen/top_dim_margin"
            android:background="@null"
            android:src="@drawable/back_arrorw"
            android:tint="@color/colorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/actions_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:background="@null"
            android:src="@drawable/more_horiz_black_24dp_1"
            android:tint="@color/colorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/back_button" />

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Hospital Team"
            android:textColor="@color/colorPrimary"
            android:textFontWeight="700"
            android:textSize="32sp"
            app:fontFamily="@font/ubuntu_mono"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group_cover_layout" />

        <TextView
            android:id="@+id/group_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Private"
            android:textColor="@color/DarkGray"
            android:textFontWeight="700"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group_name" />

        <include
            android:id="@+id/members_group_details_layout"
            layout="@layout/members_group_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/group_type" />

        <include
            android:id="@+id/times_group_details_layout"
            layout="@layout/times_group_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/members_group_details_layout" />

        <include
            android:id="@+id/messages_layout"
            layout="@layout/messages_group_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/times_group_details_layout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>