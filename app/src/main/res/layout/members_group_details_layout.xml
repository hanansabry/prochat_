<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/group_members_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_members"
        android:textColor="@color/SecondaryGray"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_members_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="(13)"
        android:textColor="@color/LighterGray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/group_members_text"
        app:layout_constraintStart_toEndOf="@id/group_members_text"
        app:layout_constraintTop_toTopOf="@id/group_members_text" />

    <TextView
        android:id="@+id/view_all_members_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_all"
        android:textColor="@color/colorSecondary"
        android:textFontWeight="700"
        android:textSize="14sp"
        app:fontFamily="@font/ubuntu_mono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/members_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/group_members_text">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/members_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal" />

        <ImageButton
            android:id="@+id/add_members_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/add_member_icon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@color/LighterGray"
        app:layout_constraintTop_toBottomOf="@id/members_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>